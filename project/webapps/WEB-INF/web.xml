<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Portal Application</display-name>
    <description>This is a simple Student Portal</description>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>project.filter.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <servlet-name>/app/*</servlet-name>
    </filter-mapping>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>project.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>project.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>project.controller.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>project.controller.AdminDashboardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>StudentDashboardServlet</servlet-name>
        <servlet-class>project.controller.StudentDashboardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminProfileServlet</servlet-name>
        <servlet-class>project.controller.AdminProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>StudentProfileServlet</servlet-name>
        <servlet-class>project.controller.StudentProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>project.controller.AddStudentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteStudentServlet</servlet-name>
        <servlet-class>project.controller.DeleteStudentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddDeleteServlet</servlet-name>
        <servlet-class>project.controller.AddDeleteServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>StudentListServlet</servlet-name>
        <servlet-class>project.controller.StudentListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>project.controller.UpdateServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>project.controller.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>project.controller.ChangePasswordServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ForgetPasswordServlet</servlet-name>
        <servlet-class>project.controller.ForgetPasswordServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <servlet-class>project.controller.UpdatePasswordServlet</servlet-class>
    </servlet>







    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>



    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>




    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/adminDashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StudentDashboardServlet</servlet-name>
        <url-pattern>/StudentDashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminProfileServlet</servlet-name>
        <url-pattern>/adminProfile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StudentProfileServlet</servlet-name>
        <url-pattern>/studentProfile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/addStudent</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>AddDeleteServlet</servlet-name>
        <url-pattern>/addDelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteStudentServlet</servlet-name>
        <url-pattern>/deleteStudent</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>StudentListServlet</servlet-name>
        <url-pattern>/studentList</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ForgetPasswordServlet</servlet-name>
        <url-pattern>/forgetPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <url-pattern>/updatePassword</url-pattern>
    </servlet-mapping>


</web-app>